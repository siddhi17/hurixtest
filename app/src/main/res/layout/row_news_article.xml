<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginTop="@dimen/normal_padding"
    android:layout_marginEnd="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_elevation"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_list_item">

        <!-- News id -->
        <TextView
            android:id="@+id/tvNewsItemId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="@dimen/normal_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textview_size_normal"
            tools:text="Elon Musk says Tesla can't yet launch in India" />

        <!-- News Article Type -->
        <TextView
            android:id="@+id/tvNewsItemArticleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNewsItemId"
            android:maxLines="2"
            android:padding="@dimen/normal_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textview_size_normal"
            tools:text="Elon Musk says Tesla can't yet launch in India" />

        <!-- Date - Time -->
        <TextView
            android:id="@+id/tvListItemDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNewsItemArticleType"
            android:layout_marginStart="@dimen/normal_padding"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginBottom="@dimen/normal_padding"
            android:maxLines="2"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textview_size_small"
            tools:text="@string/str_test_date" />

        <!-- Abstract -->
        <TextView
            android:id="@+id/tvListItemAbstract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvListItemDateTime"
            android:layout_marginStart="@dimen/normal_padding"
            android:layout_marginLeft="@dimen/normal_padding"
            android:layout_marginBottom="@dimen/normal_padding"
            android:maxLines="2"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textview_size_small"
            tools:text="@string/str_test_date" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>